<p id="notice"><%= notice %></p>

<h1>Railcars</h1>

<table>
  <thead>
    <tr>
      <th>People</th>
      <th>Placa</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railcars.each do |railcar| %>
      <tr>
        <td><%= railcar.person_id %></td>
        <td><%= railcar.placa %></td>
        <td><%= railcar.marca %></td>
        <td><%= railcar.modelo %></td>
        <td><%= railcar.tipo %></td>
        <td><%= link_to 'Show', railcar %></td>
        <td><%= link_to 'Edit', edit_railcar_path(railcar) %></td>
        <td><%= link_to 'Destroy', railcar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

